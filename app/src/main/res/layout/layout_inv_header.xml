<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/header_view_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_48dp"
    android:paddingLeft="5dp"
    android:background="@color/light_blue"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/header_center_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:text="@string/uhf_read_write"
        android:textSize="@dimen/dimens_24dp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_inv_mode_label"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/dark_blue"
        android:textStyle="bold"/>


    <ImageView
        android:id="@+id/im_actionbar_settings"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        android:clickable="true"
        android:background="@drawable/settings_button_selector"/>

</LinearLayout>
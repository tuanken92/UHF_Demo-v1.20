<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/header_view_relative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_48dp"
    android:background="@color/blue"
    >

    <ImageView
        android:id="@+id/header_view_back_iv"
        android:layout_width="@dimen/dimens_48dp"
        android:layout_height="@dimen/dimens_24dp"
        android:src="@drawable/back_arrow"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/header_center_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:textSize="@dimen/dimens_24dp"
        android:gravity="center"
        android:textColor="@color/white"
        />

</RelativeLayout>